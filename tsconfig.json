{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
       ]
    }
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
